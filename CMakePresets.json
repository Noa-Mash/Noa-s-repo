{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "mingw64-debug",
      "displayName": "MinGW64 Debug",
      "description": "Debug build using MinGW64 GCC and Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "C:/msys64/mingw64/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/mingw64/bin/g++.exe"
      }
    },
    {
      "name": "mingw64-release",
      "inherits": "mingw64-debug",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mingw64-debug-build",
      "configurePreset": "mingw64-debug"
    },
    {
      "name": "mingw64-release-build",
      "configurePreset": "mingw64-release"
    }
  ]
}
